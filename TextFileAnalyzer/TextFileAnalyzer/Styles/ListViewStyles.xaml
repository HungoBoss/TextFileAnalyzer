<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Default style for labels-->
    <Style TargetType="Label" x:Key="TextFileLabels">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- Default style for text blocks -->
    <Style TargetType="TextBlock" x:Key="TextFileTextBlocks">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="WrapWithOverflow"/>
    </Style>

    <!-- Default style for List View -->
    <Style TargetType="ListView" x:Key="ListView">
    </Style>

    <!-- Default style for List View items -->
    <Style TargetType="ListViewItem" x:Key="ListViewItems">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <!-- Default style images in List View Items -->
    <Style TargetType="Image" x:Key="FolderIcon">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
    </Style>

    <!-- Name Of File -->
</ResourceDictionary>