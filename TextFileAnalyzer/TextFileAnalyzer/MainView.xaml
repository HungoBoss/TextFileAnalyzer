<Window x:Class="TextFileAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextFileAnalyzer"
        mc:Ignorable="d"
        Title="Text File Analyzer" Height="450" Width="800"
        d:DataContext="{d:DesignInstance local:MainViewViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Choose folder -->
        <Button Grid.Row="0"
                Grid.Column="0"
                Width="200"
                Height="30"
                Content="Choose folder"
                Command="{Binding SelectSourceDirectory}"/>

        <!-- Folder destination -->
        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="{Binding PathToSourceDirectory}"/>

        <!-- List of all text files -->
        <ListView Grid.Row="1"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  BorderThickness="0"
                  ItemsSource="{Binding TextFiles}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Grid Margin="0 10">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- File name -->
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.RowSpan="2"
                                   Style="{StaticResource TextFileLabels}"
                                   Content="File: "/>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="1"
                                       Style="{StaticResource TextFileTextBlocks}"
                                       Grid.RowSpan="2"
                                       Text="{Binding Name}"/>

                            <!-- Number of words -->
                            <Label Grid.Row="0"
                                   Grid.Column="2"
                                   Style="{StaticResource TextFileLabels}"
                                   Content="Words: "/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       Style="{StaticResource TextFileTextBlocks}"
                                       Text="{Binding NumberOfWords}"/>

                            <!-- Number of sentences -->
                            <Label Grid.Row="0"
                                   Grid.Column="3"
                                   Style="{StaticResource TextFileLabels}"
                                   Content="Sentences: "/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="3"
                                       Style="{StaticResource TextFileTextBlocks}"
                                       Text="{Binding NumberOfSentences}"/>

                        </Grid>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
